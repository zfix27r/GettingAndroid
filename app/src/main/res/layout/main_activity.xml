<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium"
        app:layout_constraintBottom_toTopOf="@+id/c_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/calculation_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:fontFamily="monospace"
            android:gravity="end"
            android:padding="@dimen/padding_small"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            tools:text="11+23-123" />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="@dimen/padding_small"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            tools:text="194" />
    </LinearLayout>

    <Button
        android:id="@+id/backspace_btn"
        style="@style/Theme.Calculator.Button"
        android:contentDescription="@string/btn_backspace"
        app:icon="@drawable/ic_baseline_backspace_24"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="@+id/divide_btn"
        app:layout_constraintStart_toStartOf="@+id/divide_btn"
        app:layout_constraintTop_toTopOf="@+id/c_btn" />

    <Button
        android:id="@+id/c_btn"
        style="@style/Theme.Calculator.Button"
        android:text="@string/btn_c"
        app:layout_constraintBottom_toTopOf="@+id/seven_btn"
        app:layout_constraintEnd_toEndOf="@+id/seven_btn"
        app:layout_constraintStart_toStartOf="@+id/seven_btn" />

    <Button
        android:id="@+id/seven_btn"
        style="@style/Theme.Calculator.Button"
        android:text="@string/btn_7"
        app:layout_constraintBottom_toTopOf="@+id/four_btn"
        app:layout_constraintEnd_toEndOf="@+id/four_btn"
        app:layout_constraintStart_toStartOf="@+id/four_btn" />

    <Button
        android:id="@+id/eight_btn"
        style="@style/Theme.Calculator.Button"
        android:text="@string/btn_8"
        app:layout_constraintEnd_toEndOf="@+id/five_btn"
        app:layout_constraintStart_toStartOf="@+id/five_btn"
        app:layout_constraintTop_toTopOf="@+id/seven_btn" />

    <Button
        android:id="@+id/nine_btn"
        style="@style/Theme.Calculator.Button"
        android:text="@string/btn_9"
        app:layout_constraintEnd_toEndOf="@+id/six_btn"
        app:layout_constraintStart_toStartOf="@+id/six_btn"
        app:layout_constraintTop_toTopOf="@+id/seven_btn" />

    <Button
        android:id="@+id/four_btn"
        style="@style/Theme.Calculator.Button"
        android:text="@string/btn_4"
        app:layout_constraintBottom_toTopOf="@+id/one_btn"
        app:layout_constraintEnd_toEndOf="@+id/one_btn"
        app:layout_constraintStart_toStartOf="@+id/one_btn" />

    <Button
        android:id="@+id/five_btn"
        style="@style/Theme.Calculator.Button"
        android:text="@string/btn_5"
        app:layout_constraintEnd_toEndOf="@+id/two_btn"
        app:layout_constraintStart_toStartOf="@+id/two_btn"
        app:layout_constraintTop_toTopOf="@+id/four_btn" />

    <Button
        android:id="@+id/six_btn"
        style="@style/Theme.Calculator.Button"
        android:text="@string/btn_6"
        app:layout_constraintEnd_toEndOf="@+id/three_btn"
        app:layout_constraintStart_toStartOf="@+id/three_btn"
        app:layout_constraintTop_toTopOf="@+id/four_btn" />

    <Button
        android:id="@+id/one_btn"
        style="@style/Theme.Calculator.Button"
        android:layout_marginStart="8dp"
        android:text="@string/btn_1"
        app:layout_constraintBottom_toTopOf="@+id/zero_btn"
        app:layout_constraintEnd_toStartOf="@+id/two_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/two_btn"
        style="@style/Theme.Calculator.Button"
        android:layout_marginStart="8dp"
        android:text="@string/btn_2"
        app:layout_constraintEnd_toStartOf="@+id/three_btn"
        app:layout_constraintStart_toEndOf="@+id/one_btn"
        app:layout_constraintTop_toTopOf="@+id/one_btn" />

    <Button
        android:id="@+id/three_btn"
        style="@style/Theme.Calculator.Button"
        android:layout_marginStart="8dp"
        android:text="@string/key_3"
        app:layout_constraintEnd_toStartOf="@+id/minus_btn"
        app:layout_constraintStart_toEndOf="@+id/two_btn"
        app:layout_constraintTop_toTopOf="@+id/one_btn" />

    <Button
        android:id="@+id/zero_btn"
        style="@style/Theme.Calculator.Button"
        android:layout_marginBottom="8dp"
        android:text="@string/btn_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/one_btn"
        app:layout_constraintStart_toStartOf="@+id/one_btn" />

    <Button
        android:id="@+id/plus_btn"
        style="@style/Theme.Calculator.Button.Operator"
        android:text="@string/btn_plus"
        app:layout_constraintEnd_toEndOf="@+id/minus_btn"
        app:layout_constraintStart_toStartOf="@+id/minus_btn"
        app:layout_constraintTop_toBottomOf="@+id/three_btn" />

    <Button
        android:id="@+id/dot_btn"
        style="@style/Theme.Calculator.Button"
        android:text="@string/btn_dot"
        app:layout_constraintEnd_toEndOf="@+id/two_btn"
        app:layout_constraintStart_toStartOf="@+id/two_btn"
        app:layout_constraintTop_toTopOf="@+id/zero_btn" />

    <Button
        android:id="@+id/minus_btn"
        style="@style/Theme.Calculator.Button.Operator"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/btn_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/three_btn"
        app:layout_constraintTop_toBottomOf="@+id/six_btn" />

    <Button
        android:id="@+id/multiply_btn"
        style="@style/Theme.Calculator.Button.Operator"
        android:text="@string/btn_multiply"
        app:layout_constraintEnd_toEndOf="@+id/minus_btn"
        app:layout_constraintStart_toStartOf="@+id/minus_btn"
        app:layout_constraintTop_toBottomOf="@+id/nine_btn" />

    <Button
        android:id="@+id/divide_btn"
        style="@style/Theme.Calculator.Button.Operator"
        android:text="@string/btn_divide"
        app:layout_constraintEnd_toEndOf="@+id/multiply_btn"
        app:layout_constraintStart_toStartOf="@+id/multiply_btn"
        app:layout_constraintTop_toTopOf="@+id/eight_btn" />

    <Button
        android:id="@+id/equally_btn"
        style="@style/Theme.Calculator.Button.Operator"
        android:text="@string/btn_equally"
        app:layout_constraintEnd_toEndOf="@+id/three_btn"
        app:layout_constraintStart_toStartOf="@+id/three_btn"
        app:layout_constraintTop_toTopOf="@+id/zero_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>